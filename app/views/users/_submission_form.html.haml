.modal.fade{:id => "submission_for_assignment-#{assignment.id}"}
  .modal-dialog
    .modal-content
      .modal-header
        %button{:type => "button", :class => "close", "data-dismiss" => "modal", "aria-hidden" => "true"} x
        %h3= assignment.name
        %p= assignment.description
      = simple_form_for([assignment, submission], :multipart => true, :input_html => { :class => 'form-inline', :id => 'submission'}) do |f|
        - if current_user.is_staff?
          = f.association :student
        = f.input :link, :input_html => {:class => "col col-lg-9"}
        .submission-files
          %script(id="submission-file-template" type="text/x-template")
            %fieldset.submission-file
              = f.simple_fields_for :submission_files, SubmissionFile.new, child_index: 'child_index' do |sf|
                = render 'users/submission_file_fields', f: sf
          - submission.submission_files.each do |submission_file|
            %fieldset.submission-file
              = f.simple_fields_for :submission_files, submission_file, class: 'form-inline' do |sf|
                = render 'submission_file_fields', f: sf, submission: submission
        %hr
        = link_to 'Add an Attachment', '#', class: 'add-file'
        = f.text_area :text_comment, :class => :ckeditor, :label => "Text"
        .modal-footer
          %a{:href => "#", :class => "btn btn-info", "data-dismiss" => "modal", "aria-hidden" => "true"}Cancel
          = f.button :submit, "Submit", :class => "pull-right btn btn-primary"
