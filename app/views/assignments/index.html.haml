- if current_user.is_staff?
  .small-12.panel.mainContent
    / Assignment navigation
    .show-for-large-up
      = content_nav_for Assignment do
        = render "tabs"

    .hide-for-large-up{:style => "padding: 10px"}
      = mobile_nav_for Assignment

    .small-12.columns
      .hide-for-large-up
        %a.radius.button.tiny.small-12.medium-4.dropdown{:href => "#", :data => { :dropdown => "drop" } }
          Select
        %ul#drop.f-dropdown
          = render "tabs"
      
      .assignments
        - current_course_data.by_assignment_type.each do |assignment_type, assignments|
          .assignment_type{:id => "assignment-type-#{assignment_type.id}" }
            %h3.collapse= "#{assignment_type.name} â€“ #{points assignment_type.max_value} points"
            %div
              .small-3.right
                .button-bar.right
                  %ul.button-group.round
                    %li= link_to "See Overview", all_grades_assignment_type_path(assignment_type), :class => "button tiny aindex"
                    %li= link_to "Edit", edit_assignment_type_path(assignment_type), :class => "button tiny aindex"
              %table.responsive.simpleTable
                %thead
                  %tr
                    %th.sortable{"data-sort" => "string"} Name
                    - if assignment_type.name == "Attendance"
                      %th Attendance Rate
                    %th.sortable{"data-sort" => "date"} Due
                    %th.sortable{"data-sort" => "int"} Points
                    %th.button-column
                %tbody
                  - assignments.each do |assignment|
                    %tr
                      %td= link_to assignment.name, assignment
                      // If an attendance assignment has past and students could earn points for the class,
                      // display visual of attendance percentage. Otherwise display empty space.
                      %td
                        - if assignment.assignment_type.name == "Attendance" && assignment.past? && assignment.point_total != 0
                          // Provide mouseover with actual attendance percentage.
                          %span.has-tip.tip-top{:title => "#{assignment.attendance_rate_int(current_course)}%", :data => {'tooltip' => true}}
                            // Display 10 person icons to show attendance percentage by percents of 10.
                            - for i in 1..10
                              - if i <= ((assignment.attendance_rate_int(current_course) / 10).round)
                                %i.fi-male.present
                              - else
                                %i.fi-male.absent
                      %td= assignment.try(:due_at) || "Ongoing"
                      %td= points assignment.point_total
                      %td
                        .button-bar
                          %ul.button-group.round.right
                            %li
                              %a{:href => mass_grade_assignment_path(assignment), :class => 'button tiny secondary' }
                                Quick Grade
                            %li
                              %a{:href => edit_assignment_path(assignment), :class => 'button tiny secondary' }
                                Edit
                            %li
                              %a{:href => assignment_path(assignment), :data => { confirm: 'Are you sure?', method: :delete }, :class => "button tiny secondary" }
                                Delete
    .clearfix
