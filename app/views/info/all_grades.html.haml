.small-12.panel.mainContent
  / All Grades Table
  = content_nav do
    = render "info/tabs"
 
  .pagetitle= @title

  %table.responsive.simpleTable
    %thead
      %tr
        %th.sortable{"data-sort" => "int"} ID
        %th.sortable{"data-sort" => "string"} Student
        %th.sortable{"data-sort" => "string"} Assignment | ID
        %th.sortable{"data-sort" => "string"} Task
        %th.sortable{"data-sort" => "string"} Submission
        %th.sortable{"data-sort" => "int"} Raw Score
        %th.sortable{"data-sort" => "int"} Score
        %th.sortable{"data-sort" => "int"} Predicted Score
        %th.sortable{"data-sort" => "string"} Feedback
        %th.sortable{"data-sort" => "string"} Status
        %th
    %tbody
      - @grades.each do |g|
        %tr
          %td= g.id
          %td= link_to g.student.name, student_path(g.student)
          %td= "#{g.assignment.name} â€¢ #{g.assignment_id}"
          %td= g.task.name if g.task.present?
          %td= g.submission.id if g.submission.present?
          %td= g.raw_score
          %td= g.score
          %td= g.predicted_score
          %td= g.feedback
          %td= g.status
          %td
            .button-bar
              %ul.button-group.round.right
                %li= link_to "Edit Grade", edit_assignment_grade_path(g.assignment_id, g, :student_id => g.student_id), :class => "button tiny alert"
                %li= link_to "See Grade", assignment_grade_path(g.assignment_id, :student_id => g.student_id), :class => "button tiny alert"
                %li= link_to "Delete Grade", assignment_grade_path(g.assignment_id, g, :student_id => g.student_id), :class => "button tiny alert", :data => { confirm: 'Are you sure?' }, :method => :delete

  = will_paginate @grades

  .clearfix